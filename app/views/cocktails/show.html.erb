<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @cocktail.photo, height: 300, width: 400, crop: :fill %>)">
  <h1><%= @cocktail.name %></h1>
</div>

<div class="container m-4">
  <h4>Ingredients:</h4>
  <ul>
    <div class="cards">
      <% @cocktail.doses.each do |dose| %>
      <li class="card-category-ingredients">
        <div style="display: flex; flex-direction: column; text-align: center;">
        <%= dose.description %>
        <%= dose.ingredient.name %>
        <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' }  do %>
        <i class="far fa-trash-alt"></i>
        <% end %>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="d-flex align-items-center justify-content-center">
  <%= link_to "Add ingredients", new_cocktail_dose_path(@cocktail), class: "btn btn-ghost m-4" %>
  <%= link_to root_path do%>
  <i class="fas fa-home"></i>
  <% end %>
</div>



